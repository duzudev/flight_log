<%= form_with(model: flight, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6 form-group">
      <%= form.label :date %>
      <%= form.date_field :date, class: 'form-control' %>
    </div>
    
    <div class="col-md-6 form-group">
      <%= form.label :uav_type %>
      <%= form.text_field :uav_type, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 form-group">
      <%= form.label :callsign %>
      <%= form.text_field :callsign, class: 'form-control' %>
    </div>
    
    <div class="col-md-6 form-group">
      <%= form.label :from %>
      <%= form.text_field :from, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 form-group">
      <%= form.label :to %>
      <%= form.text_field :to, class: 'form-control' %>
    </div>

    <div class="col-md-6 form-group">
      <%= form.label :takeoff_time %>
      <%= form.time_select :takeoff_time, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 form-group">
      <%= form.label :landing_time %>
      <%= form.time_select :landing_time, class: 'form-control' %>
    </div>
    
    <div class="col-md-6 form-group">
      <%= form.label :bat_t_o %>
      <%= form.number_field :bat_t_o, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 form-group">
      <%= form.label :bat_rth %>
      <%= form.number_field :bat_rth, class: 'form-control' %>
    </div>

    <div class="col-md-6 form-group">
      <%= form.label :bat_ldg %>
      <%= form.number_field :bat_ldg, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 form-group">
      <%= form.label :mission_type %>
      <%= form.select :mission_type, ['surveillance', 'inspection', 'monitoring', 'mapping', 'search_and_rescue', 'others'], { include_blank: true }, { class: 'form-control', id: 'mission_type_select' } %>
      <div id="others_textarea" style="display:none;">
        <%= form.text_area :others, placeholder: 'Please specify...', class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-6 form-group">
      <%= form.label :pic %>
      <%= form.text_field :pic, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
